{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=SmartLearnDB;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "JwtSettings": {
    "SecretKey": "SuperSecretKeyForJWTTokenGenerationThatShouldBeVeryLongAndSecure123456789",
    "Issuer": "SmartLearn.API",
    "Audience": "SmartLearn.Client",
    "ExpiryMinutes": "60"
  },
  "AzureOpenAI": {
    "Endpoint": "https://your-openai-resource.openai.azure.com/",
    "ApiKey": "your-api-key-here",
    "DeploymentName": "gpt-4"
  },
  "AzureCognitiveServices": {
    "SpeechKey": "your-speech-key-here",
    "SpeechRegion": "your-speech-region-here"
  },
  "AzureStorage": {
    "ConnectionString": "your-storage-connection-string-here",
    "ContainerName": "smartlearn-content"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}