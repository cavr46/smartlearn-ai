@page "/"

<PageTitle>SmartLearn AI</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudText Typo="Typo.h3" GutterBottom="true">Bienvenido a SmartLearn AI</MudText>
    <MudText Typo="Typo.body1">
        Plataforma de aprendizaje con inteligencia artificial.
    </MudText>
    
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Características principales:</MudText>
            <MudList>
                <MudListItem Icon="@Icons.Material.Filled.School">
                    <MudListItemText Primary="Cursos interactivos con AI" />
                </MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.Quiz">
                    <MudListItemText Primary="Generación automática de quizzes" />
                </MudListItem>
                <MudListItem Icon="@Icons.Material.Filled.VideoLibrary">
                    <MudListItemText Primary="Streaming de video integrado" />
                </MudListItem>
            </MudList>
        </MudCardContent>
    </MudCard>
</MudContainer>